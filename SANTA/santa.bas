10 WIDTH 255
15 REM CLEAR SCREEN
20 PRINT CHR$(26)
25 REM TURN OFF CURSOR
30 PRINT CHR$(27)+"C4"
35 REM MOVE CURSOR TO THE HOME POSITION
100 PRINT CHR$(27)+"="+CHR$(32)+CHR$(32);
105 REM READ IMAGE FILE 80 BYTES AT A TIME (TWICE PER LINE)
110 OPEN "R",1,"SANTA.TXT",80
120 FIELD 1,80 AS A$
130 FOR Y=0 TO 99
140 GET 1,Y*2+1
150 FOR X=0 TO 79
160 C$=MID$(A$,X+1,1)
280 IF (C$="1") THEN PRINT CHR$(27)+"*"+CHR$(Y+32)+CHR$(X+32);
180 NEXT X
190 GET 1,Y*2+2
200 FOR X=80 TO 159
210 C$=MID$(A$,X-79,1)
280 IF (C$="1") THEN PRINT CHR$(27)+"*"+CHR$(Y+32)+CHR$(X+32);
230 NEXT X
240 NEXT Y
250 CLOSE 1
260 GOTO 260
